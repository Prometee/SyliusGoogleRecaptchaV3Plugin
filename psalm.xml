<?xml version="1.0"?>
<psalm
        errorLevel="1"
        resolveFromConfigFile="true"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns="https://getpsalm.org/schema/config"
        xsi:schemaLocation="https://getpsalm.org/schema/config vendor/vimeo/psalm/config.xsd"
>
    <projectFiles>
        <directory name="src" />
        <ignoreFiles>
            <directory name="vendor" />
        </ignoreFiles>
    </projectFiles>

    <issueHandlers>
        <InvalidReturnType>
            <errorLevel type="info">
                <file name="src/Form/Extension/ContactFormExtension.php"/>
                <file name="src/Form/Extension/CustomerRegistrationFormExtension.php"/>
            </errorLevel>
        </InvalidReturnType>
        <MixedArrayAccess>
            <errorLevel type="info">
                <file name="src/DependencyInjection/PrometeeSyliusGoogleRecaptchaV3Extension.php"/>
            </errorLevel>
        </MixedArrayAccess>
    </issueHandlers>
</psalm>